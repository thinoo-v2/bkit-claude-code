{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(pnpm *)",
      "Bash(yarn *)",
      "Bash(gh *)",
      "Bash(chmod *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "mcp__mcp-atlassian__*",
      "WebSearch",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:github.com)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo *)",
      "Bash(* --force)",
      "Bash(rm -rf *)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "once": true,
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "PDCA Check: Reference task-classification skill. For Feature/Major tasks writing to src/*, suggest design doc if none exists in docs/02-design/. Quick Fix/Minor â†’ proceed. Respond: {\"decision\":\"approve\"}",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "If wrote to docs/01-plan/ or docs/02-design/, note the PDCA progress. Respond: {\"decision\":\"approve\"}",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Bash(git commit *)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Commit completed. Consider: 1) Update PDCA status if feature complete 2) Run /pdca-analyze for gap analysis.\nRespond: {\"decision\":\"approve\",\"reason\":\"Commit done\"}",
            "timeout": 10000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/stop-hook.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Before compacting, summarize key context to preserve: 1) Current task status 2) Key decisions made 3) Files modified 4) Remaining work. Respond with JSON: {\"decision\": \"approve\", \"summary\": \"brief summary\"}",
            "timeout": 15000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/subagent-stop-hook.sh"
          }
        ]
      }
    ]
  },
  "env": {
    "PDCA_LEVEL": "auto",
    "PDCA_DOCS_PATH": "docs"
  }
}