{
  "$schema": "https://geminicli.dev/schemas/extension.json",
  "name": "bkit",
  "version": "1.4.2",
  "description": "Vibecoding Kit - PDCA methodology + AI-native development for Gemini CLI",
  "author": {
    "name": "POPUP STUDIO PTE. LTD.",
    "email": "contact@popupstudio.ai",
    "url": "https://popupstudio.ai"
  },
  "repository": "https://github.com/popup-studio-ai/bkit-claude-code",
  "license": "Apache-2.0",
  "keywords": [
    "vibecoding",
    "pdca",
    "development-pipeline",
    "ai-native",
    "fullstack",
    "multilingual",
    "baas",
    "enterprise"
  ],
  "engines": {
    "gemini-cli": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "context": {
    "file": "GEMINI.md"
  },
  "commands": {
    "directory": "commands/gemini"
  },
  "hooks": {
    "SessionStart": {
      "command": "node ${extensionPath}/hooks/session-start.js",
      "timeout": 5000,
      "once": true
    },
    "BeforeTool": [
      {
        "matcher": "write_file|replace",
        "command": "node ${extensionPath}/scripts/pre-write.js",
        "timeout": 5000
      },
      {
        "matcher": "run_shell_command",
        "command": "node ${extensionPath}/scripts/phase9-deploy-pre.js",
        "timeout": 5000
      }
    ],
    "AfterTool": [
      {
        "matcher": "write_file",
        "command": "node ${extensionPath}/scripts/pdca-post-write.js",
        "timeout": 5000
      }
    ],
    "AgentStop": [
      {
        "matcher": "gap-detector",
        "command": "node ${extensionPath}/scripts/gap-detector-stop.js",
        "timeout": 10000,
        "description": "v1.4.0: Auto Act trigger after gap analysis"
      },
      {
        "matcher": "pdca-iterator",
        "command": "node ${extensionPath}/scripts/iterator-stop.js",
        "timeout": 10000,
        "description": "v1.4.0: Auto re-Check trigger after iteration"
      },
      {
        "matcher": "code-analyzer",
        "command": "node ${extensionPath}/scripts/analysis-stop.js",
        "timeout": 10000,
        "description": "v1.4.0: Code quality analysis completion"
      },
      {
        "matcher": "qa-monitor",
        "command": "node ${extensionPath}/scripts/qa-stop.js",
        "timeout": 10000,
        "description": "v1.4.0: Zero Script QA completion"
      }
    ]
  },
  "skills": {
    "directory": "skills",
    "autoActivate": [
      "bkit-rules",
      "development-pipeline"
    ]
  },
  "environment": {
    "BKIT_PLATFORM": "gemini"
  }
}